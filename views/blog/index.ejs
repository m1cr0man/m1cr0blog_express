<% locals.main_classes = 'pure-g' -%>
<% locals.post = locals.data || {next_posts: []} -%>
<% include ../partials/header %>

			<span class='pure-u-1-8'></span>

			<article class='pure-u-3-4 blog-body blog-post'>
				<header>
					<h1><%= post.title %></h1>
					<time><%= (new Date(post.published)).toLocaleString() %></time>
				</header>

				<hr>

				<figure class='primary-image'>
					<a href='/posts/<%= post.id %>/<%= post.image %>'>
						<img src='/posts/<%= post.id %>/<%= post.image %>' alt='<%= post.title %>'>
					</a>
				</figure>

				<div>
<%- post.markdown %>
				</div>
			</article>

			<span class='pure-u-1-8'></span>
			<span class='pure-u-1-8'></span>

			<section class='pure-u-3-4 blog-body'>
				<h2>Don't stop here</h2>
				<hr>
				<!-- If I was still layer-phobic I would find a way to remove this div -->
				<div class='pure-g'>
<% var first = true; -%>
<% for (next_post of post.next_posts) { -%>
					<span class='pure-u-1-12'></span>
					<div class='pure-u-1-2'>
						<a href='<%= next_post.url %>' class='next-article' style='background-image: url("/posts/<%= next_post.id %>/<%= next_post.image %>");'>
							<h3><%= next_post.title %></h3>
						</a>
					</div>
					<span class='pure-u-1-12'></span>
<% if (first) { -%>
					<aside class='pure-u-1-3'>
						<div id='twitter'>
							<a class='twitter-timeline' href='https://twitter.com/m1cr0m4n' data-widget-id='626805282237227009'>Tweets by @m1cr0m4n</a>
						</div>
					</aside>
<%
	first = false;
	}
}
-%>
				</div>
			</section>
			<!-- Twitter Widget -->
			<script id='twitter-wjs' type='text/javascript' src='https://platform.twitter.com/widgets.js'></script>

			<script type='text/javascript'>
				window.history.pushState('object or string', 'Title', '<%= post.url %>');
			</script>
<% include ../partials/footer %>
